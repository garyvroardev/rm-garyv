    <include template="community/roar/includes/garyvee/fb-script.html"/>
    <include template="community/roar/includes/garyvee/menu.html"/>
    <div class="post-edit-mode"></div>
    <div class="rebelbar">
        <site_title_info source_site="current_site"/>
